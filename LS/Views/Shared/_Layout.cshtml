<!DOCTYPE html>
<html lang="en">
<head>
    <title>Live Stream</title>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <!-- Favicon -->
    <link href="img/favicon.ico" rel="shortcut icon" />

    <!-- Google Fonts -->
    <link href="https://fonts.googleapis.com/css?family=Josefin+Sans:400,400i,600,600i,700" rel="stylesheet">

    <!-- Stylesheets -->
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Content/font-awesome.min.css" rel="stylesheet" />
    @*<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">*@
    @*<link href="~/Content/bootstrap-social.css" rel="stylesheet" />*@
    @*<link href="~/Content/social-button.css" rel="stylesheet" />*@
    <link href="~/Content/magnific-popup.css" rel="stylesheet" />
    <link href="~/Content/style.css" rel="stylesheet" />
    <link href="~/Content/Site.css" rel="stylesheet" />
</head>
<body>
    <!-- Page Preloder -->
    <div id="preloder">
        <div class="loader"></div>
    </div>

    <!-- header section start -->
    <header class="header-section">
        <div class="container">
            <div class="row">
                <div class="col-lg-4 col-md-3">
                    <div class="logo">
                        <h2 class="site-logo">Live Stream</h2>
                    </div>
                </div>
                <div class="col-lg-8 col-md-9">
                    <a href="#" class="site-btn header-btn" data-toggle="modal" data-target="#myModal"><i class="fa fa-sign-in" style="color:white"></i> Login</a>
                    <nav class="main-menu">
                        <ul>
                            <li><a href="/home/index">Home</a></li>
                            <li><a href="/leaderboards/index">Leaderboards</a></li>
                            <li><a href="/topup/index">Top Up</a></li>
                            <li><a href="/forum/index">Forum</a></li>
                        </ul>
                    </nav>
                </div>
            </div>
        </div>
        <div class="nav-switch">
            <i class="fa fa-bars"></i>
        </div>
    </header>
    @RenderBody()
    <!-- footer section start -->
    <footer class="footer-section text-center">
        <div class="container">
            @*<h2 class="section-title mb-5">Live Stream</h2>*@
            @*<a href="" class="site-btn">Get in touch</a>*@
            <div class="social-links">
                <a href=""><span class="fa fa-instagram"></span></a>
                <a href=""><span class="fa fa-facebook"></span></a>
                <a href=""><span class="fa fa-twitter"></span></a>
            </div>
            <div class="copyright">
                <a href="#" style="color:gray">About</a> | <a href="#" style="color:gray">Download Live Stream Mobile</a> | <a href="#" style="color:gray">FAQ</a>
            </div>
        </div>
    </footer>
    <!-- footer section end -->
    <!-- login modal -->
    <div class="modal fade" id="myModal" role="dialog" style="top: 30% !important;">
        <div class="modal-dialog modal-lg">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                    <span style="font-size:20px">Login</span> atau <a href="#">Register</a>
                </div>
                <div class="modal-body">
                    <div class="row">
                        <div class="col-lg-12">
                            <div class="col-lg-6 col-xs-6 text-center">
                                <a href="" style="font-size:25px"><span class="fa fa-facebook"></span></a>
                            </div>
                            <div class="col-lg-6 col-xs-6 text-center">
                                <a href="" style="font-size:25px"><span class="fa fa-twitter"></span></a>
                            </div>
                        </div>
                    </div>
                    <div class="row" style="padding-top:20px; padding-bottom:10px">
                        <div class="col-lg-12" style="padding-top:50px">
                            <div class="col-lg-6 col-xs-6 text-center">
                                <a href="" style="font-size:25px"><span class="fa fa-google"></span></a>
                            </div>
                            <div class="col-lg-6 col-xs-6 text-center">
                                <a href="" style="font-size:25px"><span class="fa fa-instagram"></span></a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- login modal end -->
    <!--====== Javascripts & Jquery ======-->
    <script src="~/Scripts/jquery-2.1.4.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
    <script src="~/Scripts/mixitup.min.js"></script>
    <script src="~/Scripts/magnific-popup.min.js"></script>
    <script src="~/Scripts/main.js"></script>
</body>
</html>

